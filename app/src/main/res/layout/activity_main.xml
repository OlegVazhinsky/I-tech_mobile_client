<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/labelMeasurement"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/measurement"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelMeasuredVoltage"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/voltage"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelMeasuredCurrent"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/current"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/labelMeasuredPower"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/power"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMeasuredVoltage"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/textMeasuredCurrent"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/dash" />

            <TextView
                android:id="@+id/textMeasuredPower"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/dash" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/on"
                android:textSize="14sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonOff"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/off"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/labelSetup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/setup"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="@string/value_preset"
                android:textAlignment="center" />

            <RadioGroup
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1" >

                <RadioButton
                    android:id="@+id/radioButtonCurrent"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/current"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioButtonVoltage"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/voltage"
                    android:textSize="16sp" />
            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSetup"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/set"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonInitial"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/initial_state"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/connection"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textIP"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ip_address"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textPort"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/port"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textTimeout"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/timeout"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextIP"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="@string/ip_preset"
                android:textAlignment="center"
                android:textSize="16sp"
                android:labelFor="@id/editTextIP"/>

            <EditText
                android:id="@+id/editTextPort"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="@string/port_preset"
                android:textAlignment="center"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextTimeOut"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:text="@string/timeout_preset"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonConnect"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/connect"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonDisconnect"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:insetLeft="5dp"
                android:insetTop="5dp"
                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="@string/disconnect"
                android:textSize="14sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:text="@string/info"
            android:textColor="@color/black"
            android:textSize="14sp" />
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>